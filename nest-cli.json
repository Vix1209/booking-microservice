{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/booking-microservice/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/booking-microservice/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/booking-microservice",
  "projects": {
    "booking-microservice": {
      "type": "application",
      "root": "apps/booking-microservice",
      "entryFile": "main",
      "sourceRoot": "apps/booking-microservice/src",
      "compilerOptions": {
        "tsConfigPath": "apps/booking-microservice/tsconfig.app.json"
      }
    },
    "database": {
      "type": "library",
      "root": "libs/database",
      "entryFile": "index",
      "sourceRoot": "libs/database/src",
      "compilerOptions": {
        "tsConfigPath": "libs/database/tsconfig.lib.json"
      }
    },
    "job": {
      "type": "application",
      "root": "apps/job",
      "entryFile": "main",
      "sourceRoot": "apps/job/src",
      "compilerOptions": {
        "tsConfigPath": "apps/job/tsconfig.app.json"
      }
    },
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    }
  }
}